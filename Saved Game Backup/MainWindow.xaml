<Window x:Class="Saved_Game_Backup.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:command="http://www.galasoft.ch/mvvmlight"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="Save Game Backup Tool"
        Width="525"
        Height="500"
        Background="DeepSkyBlue"
        DataContext="{Binding Path=Main,
                              Source={StaticResource Locator}}"
        Icon="Resources/SGBIcon.ico"
        Padding="3"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow">
    <Window.Style>
        <Style BasedOn="{StaticResource FontStyle}" TargetType="Control" />
    </Window.Style>

    <StackPanel Background="{Binding Background}">
        <Menu IsMainMenu="True">
            <MenuItem Header="_File">
                <MenuItem Header="_Theme">
                    <MenuItem Command="{Binding SetThemeLight}" Header="_Light" />
                    <MenuItem Command="{Binding SetThemeDark}" Header="_Dark" />
                </MenuItem>
                <MenuItem Command="{Binding Close}" Header="_Exit" />
            </MenuItem>
        </Menu>
        <StackPanel Margin="3"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
            <TextBlock FontFamily="Segoe UI Semibold"
                       FontSize="14"
                       Text="Saved Game Backup Tool by Rob Cornell" />
        </StackPanel>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="0*" />
                <RowDefinition Height="43*" />
                <RowDefinition Height="62" />
                <RowDefinition Height="172*" />
                <RowDefinition Height="28*" />
                <RowDefinition Height="28*" />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="1"
                       Grid.Column="0"
                       Height="43"
                       Margin="3"
                       HorizontalAlignment="Left"
                       FontSize="14"
                       Text="Drive where saves are stored:"
                       TextWrapping="Wrap" />

            <ComboBox Grid.Row="1"
                      Grid.Column="1"
                      Margin="3"
                      VerticalAlignment="Center"
                      ItemsSource="{Binding HardDrives}"
                      SelectedItem="{Binding SelectedHardDrive}" />
            <Button Grid.Row="1"
                    Grid.Column="2"
                    Margin="3"
                    VerticalAlignment="Center"
                    Command="{Binding DetectGames}"
                    Content="Detect Games" />
            <TextBlock Grid.Row="2"
                       Grid.Column="0"
                       Margin="3"
                       VerticalAlignment="Center"
                       FontSize="14"
                       Text="Specify custom save folder, if any."
                       TextWrapping="Wrap" />
            <Button Grid.Row="2"
                    Grid.Column="1"
                    Height="22"
                    Margin="3"
                    Command="{Binding SpecifyFolder}"
                    Content="Choose Folder" />

            <TextBlock Grid.Row="3"
                       Grid.Column="0"
                       Margin="3"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       FontSize="14"
                       Text="Double click the games you want to back up."
                       TextWrapping="Wrap" />
            <StackPanel Grid.Row="3" Grid.Column="1">
                <TextBlock HorizontalAlignment="Center"
                           FontSize="14"
                           Text="Games List" />
                <ListBox MinHeight="150"
                         Margin="3"
                         ItemsSource="{Binding GamesList}"
                         SelectedItem="{Binding SelectedGame}">

                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseDoubleClick">
                            <command:EventToCommand Command="{Binding MoveToBackupList, Mode=OneWay}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>

                </ListBox>
            </StackPanel>

            <StackPanel Grid.Row="3" Grid.Column="2">
                <TextBlock HorizontalAlignment="Center"
                           FontSize="14"
                           Text="Games to Backup" />
                <ListBox MinHeight="150"
                         Margin="3"
                         ItemsSource="{Binding GamesToBackup}"
                         SelectedItem="{Binding SelectedBackupGame}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseDoubleClick">
                            <command:EventToCommand Command="{Binding MoveToGamesList, Mode=OneWay}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </ListBox>
            </StackPanel>


            <Button Grid.Row="4"
                    Grid.Column="1"
                    Grid.ColumnSpan="2"
                    Margin="3"
                    HorizontalAlignment="Center"
                    Command="{Binding ResetList}"
                    Content="Reset Lists" />

            <Button Grid.Row="6"
                    Grid.Column="1"
                    Margin="3"
                    Command="{Binding BackupSaves}"
                    Content="Backup To Folder" />
            <Button Grid.Row="6"
                    Grid.Column="2"
                    Margin="3"
                    Command="{Binding BackupAndZip}"
                    Content="Backup And Zip" />


            <TextBlock Grid.Row="6"
                       Grid.RowSpan="2"
                       Grid.Column="0"
                       Margin="3"
                       VerticalAlignment="Center"
                       FontSize="14"
                       Text="Choose a backup method."
                       TextWrapping="Wrap" />
            <Button Grid.Row="7"
                    Grid.Column="1"
                    Grid.ColumnSpan="2"
                    Margin="3"
                    Command="{Binding AutoBackup}"
                    Content="Toggle Autobackup"
                    ToolTip="Autobackup will watch the save folders for the games you have selected. When new save files are added or modified, they will be backed up to a folder of your choosing." />
            <Border Grid.Row="7"
                    Grid.Column="3"
                    Margin="3"
                    Background="Lime"
                    CornerRadius="15"
                    Visibility="{Binding AutoBackupVisibility,
                                         UpdateSourceTrigger=PropertyChanged}">
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Text="Autobackup Enabled"
                           Visibility="{Binding AutoBackupVisibility,
                                                UpdateSourceTrigger=PropertyChanged}" />
            </Border>
            <TextBlock Grid.Row="8"
                       Grid.Column="0"
                       FontSize="14"
                       Text="Maximum # of AutoBackups"
                       TextWrapping="Wrap" />

            <xctk:IntegerUpDown Grid.Row="8"
                                Grid.Column="1"
                                Width="40"
                                Height="23"
                                Margin="3"
                                HorizontalAlignment="Left"
                                Text="{Binding MaxBackups,
                                               UpdateSourceTrigger=PropertyChanged,
                                               Delay=100}" />
            <Button Grid.Row="1"
                    Grid.Column="3"
                    Content="TEST DOWNLOAD" />
            <Image Grid.Row="3"
                   Grid.Column="3"
                   Width="130"
                   Height="160" />
        </Grid>

    </StackPanel>
</Window>
